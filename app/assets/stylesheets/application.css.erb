html {
    background-color: #DCE6D1;
    background-image: url(<%= image_path 'background.png' %>);
    padding-top: 10px;
}
body {
    font-family: 'Asap';
    width: 960px;
    margin: 0 auto;
    background-color: white;
    height: 100%;
    -webkit-border-radius: 20px 20px 4px 4px;
    -moz-border-radius: 20px 20px 4px 4px;
    border-radius: 20px 20px 4px 4px;
    -webkit-box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    -moz-box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    overflow-y: scroll;
}
a, a:visited {
    text-decoration: none;
    color: #4797BF;
}
ol {
    list-style-type: decimal;
    margin-left: 40px;
}
ol > li {
    margin: 6px 0;
}
ul {
    list-style-type: square;
    margin-left: 40px;
}
li {
    line-height: 1.3em;
}
li p {
    margin-left: 0;
    margin-right: 0;
}
dt {
    font-style: italic;
    margin-bottom: 0.3em;
}
dd {
    margin-bottom: 0.5em;
    margin-left: 1.5em;
}
hgroup {
    padding: 10px;
}
h1 {
    font-size: 5.5em;
    margin-bottom: 0.5em;
    font-family: 'Terminal Dosis';
}
h2 {
    font-size: 3em;
    margin-bottom: 0.5em;
}
h3 {
    font-size: 1.8em;
    font-weight: bold;
    margin-bottom: 0.5em;
}
h4 {
    font-size: 1.3em;
    font-weight: bold;
    margin-top: 0.8em;
    margin-bottom: 0.5em;
    text-decoration: underline;
}
h5 {
    font-size: 1.1em;
    font-style: italic;
}
header {
    background-color: #A8C486;
    -webkit-border-radius: 20px 20px 0 0;
    -moz-border-radius: 20px 20px 0 0;
    border-radius: 20px 20px 0 0;
}
footer {
    height: 40px;
    background-color: #ddd;
    -webkit-border-radius: 0 0 4px 4px;
    -moz-border-radius: 0 0 4px 4px;
    border-radius: 0 0 4px 4px;
    text-align: center;
    padding: 15px;
}
#copyright {
    color: #aaa;
    font-size: 0.8em;
}
input {
    max-width: 300px;
}
input[type=submit] {
    margin-bottom: 2em;
}
nav {
    background-color: #7A8C66;
}
nav li {
    display: inline-block;
    background-image: -webkit-linear-gradient(#7A8C66, #647354);
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #7A8C66), color-stop(1, #647354));
    background-image: -moz-linear-gradient(#7A8C66, #647354);
    background-image: -o-linear-gradient(#7A8C66, #647354);
    filter: "progid:DXImageTransform.Microsoft.gradient(startColorStr=#7A8C66, EndColorStr=#647354)";
    background-image: linear-gradient(#7A8C66, #647354);
    padding: 10px;
}
nav a, nav a:visited {
    color: white;
}
table {
    margin-bottom: 15px;
}
th {
    font-weight: bold;
}
table td {
    padding: 3px 8px;
}
p {
    margin: 10px;
    line-height: 1.4em;
}
form > fieldset > legend {
    font-weight: bold;
}
.flash {
    padding: 15px;
    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    border-radius: 10px;
    margin-bottom: 25px;
}
.flash.alert, .flash.error {
    background-color: #F5BABA;
}
.flash.notice {
    background-color: #BAF5BC;
}

#skip-link {
    display: none;
}
#content {
    padding: 25px;
    -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
    -moz-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
    box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
}
#app-title {
    color: white;
    margin-bottom: 0.1em;
    margin-left: 0.3em;
    display: inline-block;
    text-shadow: 2px 2px 7px rgba(0, 0, 0, 0.2);
}
#app-subtitle {
    font-size: 1.1em;
    color: white;
    font-style: italic;
    margin-left: 0.5em;
    display: inline-block;
    position: relative;
    top: 0.4em;
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.2);
}
form .toggler legend {
    cursor: pointer;
    color: #4797BF;
}
.inline-hints {
    font-size: 0.7em;
}
/*---- Color theme choices ----*/
#geo_graph_color_theme_input .choices-group {
    width: 72%;
    padding-left: 27%;
}
#geo_graph_color_theme_input .choices-group li {
    width: 250px;
    height: 25px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    -webkit-box-shadow: 1px 1px 3px black;
    -moz-box-shadow: 1px 1px 3px black;
    box-shadow: 1px 1px 3px black;
}
#geo_graph_color_theme_input .choices-group label input {
    margin: 4px 0 0 -7%;
}
#geo_graph_color_theme_input label {
    display: inline-block;
}
/*---- [End] Color theme choices ----*/
/* What an ugly, silly mess */
<%=
    ColorTheme.all.map do |color_theme|
".color_theme_#{color_theme.id} {
    width: 200px;
    height: 25px;
    border: 2px solid black;
    background-image: linear-gradient(
        left,
        #{color_theme.gradient.map do |color|
            color[1].to_s + ' ' + color[0].to_s + '%'
        end.join(",\r\n#{' '*8}")}
    );
    background-image: -webkit-linear-gradient(
        left,
        #{color_theme.gradient.map do |color|
            color[1].to_s + ' ' + color[0].to_s + '%'
        end.join(",\r\n#{' '*8}")}
    );
    background-image: -moz-linear-gradient(
        left,
        #{color_theme.gradient.map do |color|
            color[1].to_s + ' ' + color[0].to_s + '%'
        end.join(",\r\n#{' '*8}")}
    );
}" 
    end.join("\r\n")
%>
