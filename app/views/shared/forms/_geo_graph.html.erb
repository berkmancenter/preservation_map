<%= semantic_form_for @geograph do |f| %>
    <%= f.inputs do %>
        <%= f.input :name, :hint => 'What do you want to call it?' %>
        <%= f.input :import_data, :label => 'Data',
            :hint => "Make sure it's a CSV file with columns named: " + Code::Application.config.place_column_names.collect{ |k, v| "\"#{v}\"" }.join(', ') %>
        <%= f.input :color_theme, :as => :radio, :value_as_class => true, :member_label => '', :wrapper_html => { :class => :gradient } %>
        <% if ExternalDataSource.count %>
            <%= f.input :external_data_sources, :as => :check_boxes, :hint => 'Do you want to pull in data from somewhere else?' %>
        <% end %>
        <% unless @geograph.measures.empty? %>
            <%= f.input :size_measure, :as => :select, :collection => @geograph.measures, :include_blank => false, :label => 'Default size measure' %>
            <%= f.input :color_measure, :as => :select, :collection => @geograph.measures, :include_blank => false, :label => 'Default color measure' %>
        <% end %>
    <% end %>
    <%= f.inputs 'Advanced &raquo;', :id => 'advanced', :class => 'toggler' do %>
        <%= f.input :min_spot_size, :label => 'Minimum spot size', :hint => 'What should the radius of the smallest spot be (in pixels)?' %>
        <%= f.input :max_spot_size, :label => 'Maximum spot size', :hint => 'What should the radius of the largest spot be (pixels still)?' %>
        <%= f.input :num_legend_sizes, :label => 'Number of sizes in legend', :hint => 'The legend shows a few sample sizes.  How many should it show?' %>
        <%= f.input :num_legend_colors, :label => 'Number of colors in legend', :hint => 'Same deal as above, but with colors instead of sizes.' %>
        <%= f.input :num_zoom_levels, :label => 'Maximum zoom level', :hint => 'How far in should users be able to zoom? (For reference, Google Maps has a max of "20")' %>
    <% end %>
    <%= f.buttons %>
<% end %>
