<%= semantic_form_for @geograph do |f| %>
    <%= f.inputs do %>
        <%= f.input :name %>
        <%= f.input :import_data, :label => 'Data' %>
        <%= f.input :min_spot_size, :label => 'Minimum spot size' %>
        <%= f.input :max_spot_size, :label => 'Maximum spot size' %>
        <%= f.input :color_theme %>
        <% if ExternalDataSource.count %>
            <%= f.input :external_data_sources, :as => :check_boxes %>
        <% end %>
        <% unless @geograph.measures.empty? %>
            <%= f.input :size_measure, :as => :select, :collection => @geograph.measures, :include_blank => false %>
            <%= f.input :color_measure, :as => :select, :collection => @geograph.measures, :include_blank => false %>
        <% end %>
    <% end %>
    <%= f.buttons %>
<% end %>
